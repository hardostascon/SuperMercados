# Database - SQL Server con Autenticación de Windows
# Formato: mssql+pyodbc://servidor/base_datos?driver=ODBC+Driver+18+for+SQL+Server&Trusted_Connection=yes
DATABASE_URL=mssql+pyodbc://HARDOS/precio_comparador?driver=ODBC+Driver+18+for+SQL+Server&Trusted_Connection=yes&TrustServerCertificate=yes

# Alternativa sin aioodbc (síncrona):
# DATABASE_URL=mssql+pyodbc://sa:TuPassword123@localhost:1433/precio_comparador?driver=ODBC+Driver+18+for+SQL+Server&TrustServerCertificate=yes

# Redis
REDIS_URL=redis://localhost:6379/0

# API
API_V1_PREFIX=/api/v1
PROJECT_NAME=Comparador de Precios Colombia
DEBUG=True

# Scraping
SCRAPY_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
